{
  "hooks": {
    "before:init": [
      "yarn lint",
      "yarn test",
      "yarn typecheck",
      "yarn prettier:check",
      "yarn build"
    ]
  },
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "publishArgs": [
      "--workspaces"
    ],
    "versionArgs": [
      "--workspaces"
    ]
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
